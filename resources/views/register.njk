<!--Pendaftaran-->
<section id="register" class="pad-lg light-gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 text-center">
        <i class="fa fa-envelope-o margin-40"></i>
        <h2 class="black">Isi detail profil</h2>
        <br />




        <form class="form-horizontal" role="form" method="POST" action="/register">


                         {{ csrfField }}

                             <div class="col-sm-offset-2 col-sm-8">
                                 <input id="name" type="text" class="form-control" name="name" placeholder="Enter your full name" required>
                             </div>

                             <div class="col-sm-offset-2 col-sm-8">
                                 <input id="email" type="email" class="form-control" name="email" placeholder="Enter your email address" required>
                             </div>

                             <div class="col-sm-offset-2 col-sm-8">
                                 <input id="userName" type="text" class="form-control" name="userName" placeholder="Enter your user name" required>
                             </div>

                             <div class="col-sm-offset-2 col-sm-8">
                                 <input id="password" type="password" class="form-control" name="password" placeholder="Enter your password" required>
                             </div>

                             <div class="col-sm-offset-2 col-sm-8">
                                 <input id="KTP" type="KTP" class="form-control" name="KTP" placeholder="Enter your KTP number" required>
                             </div>

                             <div class="col-sm-offset-2 col-sm-8">
                                 <input id="number" type="string" class="form-control" name="number" placeholder="Enter your number" required>
                             </div>


                         <div class="form-group">
                             <div class="col-sm-offset-2 col-sm-4 col-md-offset-4">
                                 <button type="submit" class="btn btn-primary btn-lg">
                                     <i class="fa fa-btn fa-user"></i> Register
                                 </button>
                             </div>
                         </div>
                     </form>
        </div>
</body>

