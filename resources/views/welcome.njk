                <p>Masukkan detail profil Anda:</p>
              </br>

              {{ form.open({Route: 'memberIUD.store'}) }} {{ csrfField }}

              <div class="field">
                {{ form.text('name', 'Enter full name',{class:'form-control'}) }}
              </div>

              <div class="field">
                {{ form.text('KTP', 'Enter KTP Number',{class:'form-control'}) }}
              </div>


              <div class="field">
                {{ form.text('email', 'Enter email address',{class:'form-control'}) }}
              </div>


              <div class="field">
                {{ form.text('number', 'Enter your phone number',{class:'form-control'}) }}
              </div>


              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                  {{ form.submit('SUBMIT','submit', { class: ' btn btn-primary'}) }}
                </div>
              </div>
              {{ form.close() }}

            </div>
          </div>

        </div>
      </div>



</div>
