        <i class="fa fa-envelope-o margin-40"></i>
        <h2 class="black">Form Register</h2>
        <br />
        <p class="black">Dapatkan seluruh kemudahan yang kami sediakan.</p>
        <br />


        <div class="form-horizontal">
          {{ form.open({route: 'userIUD.store'}) }}
          <div class="form-group">
            {{ form.text('userName','Create new user name',{ class: 'form-control'})}}
          </div>
          <div class="form-group">
            {{ form.password('password','create your Password',{ class: 'form-control'})}}
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
              <button type="submit" class="btn btn-primary btn-lg" href="register">REGISTER</button>
            </div>
            </div>
              {{ form.close() }}


        </div>
