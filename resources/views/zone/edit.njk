{% extends 'master' %}

{% block content %}

	<div class="col-md-8 col-md-offset-2">
		<div class="col-md-offset-2">
		{% if successMessage %}
			<div class="alert alert-success alert-dismissable">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<strong>Success!</strong> {{successMessage}}.
			</div>
		{% endif %}
		{% if old('errors') %}
			<div class="alert alert-danger alert-dismissable">
				{% for error in old('errors') %}
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<li> {{ error.message }} </li>
				{% endfor %}
			</div>

		{% endif %}
	</br>
</br>
		</div>
		<div class="form-horizontal">
		{{ form.open({ route: 'zoneIUD.update', params: {id: zone.id} }) }}

			{{csrfField}}

			<div class="form-group">
				{{ form.label('id','id',{ class: 'col-sm-2 control-label'}) }}
    			<div class="col-sm-6">
      				{{ form.text('id',zone.id,{ class: 'form-control'})}}
    			</div>
    		</div>

    		<div class="form-group">
				{{ form.label('name','Name',{ class: 'col-sm-2 control-label'}) }}
    			<div class="col-sm-6">
      				{{ form.text('name',zone.name,{ class: 'form-control'})}}
    			</div>
    		</div>

    		<div class="form-group">
				{{ form.label('fare','fare',{ class: 'col-sm-2 control-label'}) }}
    			<div class="col-sm-6">
      				{{ form.text('fare',zone.fare,{ class: 'form-control'})}}
    			</div>
    		</div>


    		<div class="form-group">
    			<div class="col-sm-offset-2 col-sm-10">
    				{{ form.submit('Update','submit', { class: ' btn btn-primary'}) }}
    			</div>
    		</div>
    	{{ form.close() }}
		</div>
	</div>


{% endblock %}
